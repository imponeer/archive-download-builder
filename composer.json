{
    "name": "imponeer/archive-download-builder",
    "description": "A PHP library for building and downloading archive files (ZIP and TAR.GZ) with optional Flysystem support for various file sources",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Raimondas Rimkeviƒçius (aka MekDrop)",
            "email": "mekdrop@impresscms.org",
            "homepage": "https://www.impresscms.org",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "nelexa/zip": "^4.0",
        "league/flysystem": "^3.0",
        "nyholm/psr7": "^1.8",
        "httpsoft/http-emitter": "^1.1",
        "pear/archive_tar": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Imponeer\\ArchiveDownloadBuilder\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Imponeer\\ArchiveDownloadBuilder\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12",
        "squizlabs/php_codesniffer": "^3.7 || ^4.0",
        "phpstan/phpstan": "^2.0",
        "league/flysystem-memory": "^3.29"
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "phpstan": "phpstan analyse"
    }
}
